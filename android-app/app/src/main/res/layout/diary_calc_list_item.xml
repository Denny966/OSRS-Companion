<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingEnd="10dp"
    android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft">

    <LinearLayout
        android:id="@+id/diary_calc_list_item_wrapper"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/diary_can_complete_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/diary_calc_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/diary_calc_list_item_reqs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="14sp"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/diary_calc_list_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="false"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/baseline_done_24"/>
</RelativeLayout>

